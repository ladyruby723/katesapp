<!DOCTYPE html>
<html>
  <head>
    <title>Nucleo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-dark bg-#00112A">
      <div class="container">
        <%= link_to "Nucleo", root_path, class: "navbar-brand" %>
        <ul class="nav navbar-nav">
          <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Tweets", tweets_path, class: "nav-link"%></li>
          <li class="nav-item"><%= link_to "Articles", articles_path, class: "nav-link"%></li>
          <% if user_signed_in? %>
            <li class="nav-item float-md-right"><%= link_to "Log out", signout_path, method: :delete, class: "nav-link btn btn-outline-secondary" %></li>
          <% else %>
            <li class="nav-item float-md-right"><%= link_to "Sign-up", signup_path, class: "btn btn-outline-secondary" %></li>
            <li class="nav-item float-md-right"><%= link_to "Sign-in", signin_path, class: "btn btn-outline-secondary" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 One Month</p>
        </center>
      </div>
    </footer>

  </body>
</html>
