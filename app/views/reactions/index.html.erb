<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Reactions</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Url</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @reactions.each do |reaction| %>
        <tr>
          <td><%= reaction.user.username %></td>
          <td><%= reaction.title %></td>
          <td><%= reaction.url %></td>
          <td><%= reaction.text %></td>
          <td><%= link_to 'Show', reaction %></td>
          <% if article_user == current_user %>
            <td><%= link_to 'Edit', edit_reaction_path(reaction) %></td>
            <td><%= link_to 'Destroy', reaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Reaction', new_reaction_path %>
</div>