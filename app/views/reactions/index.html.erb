<div class="container">

  <div class="row">
    <div class="col-md-4">
      <div class="card card-block">
        <% if user_signed_in? %>
          <h4 class="card-title">Reactions</h4>
          <p class="card-text"><%= link_to current_user.username, user_path(current_user.username) %></p>
        <% else %>
          <p class="card-text"><%= link_to "Sign up now!", signup_path %></p>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <% if user_signed_in? %>
        <center><%= link_to 'New Reaction', new_reaction_path %></center>
      <% end %>
      <ul class="list-group">
        <% @reactions.each do |reaction| %>
          <%= link_to reaction, class: "list-group-item list-group-item-action" do %>
            <h5 class="list-group-item-heading"><%= reaction.user.username %></h5>
            <p class="list-group-item-text"><%= reaction.text %></p>
            <p></p>
            <p class="list-group-item-text"><%= reaction.url %></p>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>