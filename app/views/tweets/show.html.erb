<div class="container">
  <div class="row">
    <div class="offset-md-2 col-md-8">
      <div class="card card-block">
        <h4 class="card-title"><% @tweet.user.username %></h4>
        <h3 class="card-text"><%= @tweet.content %></h3>
        <% if @tweet.user == current_user %>
          <%= link_to 'Edit', edit_tweet_path(@tweet), class: "card-link" %>
        <% end %>
        <%= link_to 'Back', tweets_path, class: "card-link" %>
      </div>
    </div>
  </div>
</div>