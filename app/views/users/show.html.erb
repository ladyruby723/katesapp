<div class="container">

  <div class="row">
    <div class="col-md-4">
      <div class="card card-block">
        <h4 class="card-title"><%= @user.username %></h4>
        <p class="card-text"><%= @user.name %></p>
        <% if user_signed_in? %>
          <% if current_user.following?(@user) %>
            <p class="card-text"><%= link_to "Unfollow", unfollow_user_path(@user.username), method: :delete %></p>
          <% else %>
            <p class="card-text"><%= link_to "Follow", follow_user_path(@user.username), method: :post %></p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-8">
      <ul class="list-group">
        <% @reactions.each do |reaction| %>
          <%= link_to reaction, class: "list-group-item list-group-item-action" do %>
            <h5 class="list-group-item-heading"><%= reaction.user.username %></h5>
            <p class="list-group-item-text"><%= reaction.content %></p>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>